    <PackageTags>asp.net core webbackgrounder environment.queuebackgroundworkitem IHostedService IHost IWebHost</PackageTags>
    <Copyright></Copyright>
    <RepositoryUrl>https://github.com/JonasBr68/CloudCraic.Hosting.BackgroundQueue</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/JonasBr68/CloudCraic.Hosting.BackgroundQueue/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/JonasBr68/CloudCraic.Hosting.BackgroundQueue</PackageProjectUrl>
    <PackageIconUrl>http://dalsoft.co.uk/images/icon.png</PackageIconUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection.Abstractions" Version="2.0.0" />
