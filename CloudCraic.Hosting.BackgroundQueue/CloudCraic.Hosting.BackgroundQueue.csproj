    <AssemblyName>CloudCraic.Hosting.BackgroundQueue</AssemblyName>
    <IsPackable>true</IsPackable>
    <PackageId>CloudCraic.Hosting.BackgroundQueue</PackageId>
    <PackageVersion>1.0.4</PackageVersion>
